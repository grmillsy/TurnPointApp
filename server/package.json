  "dependencies": {
    "@prisma/client": "^5.19.1",
    "cors": "^2.8.5",
    "express": "^4.21.0",
    "nodemon": "^3.1.4",
    "prisma": "^5.19.1"
  },
  "devDependencies": {
    "wait-on": "^8.0.1"
  }
}
